{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "lib": ["es6"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@nuxt-teamgrid-sdk/*": ["./packages/nuxt-teamgrid-sdk/src/*"],
      "@nuxt-teamgrid-storage/*": ["./packages/nuxt-teamgrid-storage/src/*"],
      "@nuxt-settings/*": ["./packages/nuxt-settings/src/*"],
      "@nuxt-status/*": ["./packages/nuxt-status/src/*"]
    },
    "types": ["@types/node", "@nuxt/types"]
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
}
