{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "lib": ["es6"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@teamgrid-app/nuxt-teamgrid-sdk/*": [
        "./packages/nuxt-teamgrid-sdk/src/*"
      ]
    },
    "types": ["@types/node", "@nuxt/types"]
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
}
